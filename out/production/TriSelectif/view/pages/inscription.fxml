            <!-- ComboBox adresse -->
            <ComboBox fx:id="adresseComboBox" promptText="SÃ©lectionnez une adresse"
                      styleClass="input-field" prefWidth="320"/>

            <!-- Bouton inscription -->
            <Button fx:id="inscriptionButton" text="S'inscrire" styleClass="login-button"
                    prefWidth="200" onAction="#handleInscription"/>

            <!-- Label de message -->
            <Label fx:id="messageLabel" styleClass="success-message"/>

            <!-- Lien de retour -->
            <HBox alignment="CENTER" spacing="10">
                <Hyperlink fx:id="retourLien" text="Retour Ã  la connexion" onAction="#retourConnexion"/>
